<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@color/cr_blue</item>
        <item name="android:textColor">@color/cr_white</item>
        <item name="android:buttonStyle">@style/Widget.Button.Custom</item>
        <item name="android:editTextStyle">@style/Widget.EditText.Custom</item>
        <item name="android:spinnerStyle">@style/Widget.Spinner.Custom</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
        <item name="android:checkboxStyle">@style/Widget.CheckBox.Custom</item>
        <item name="android:actionBarStyle">@style/CrossRoadsActionBar</item>
    </style>

    <style name="Widget.Button.Custom" parent="android:Widget.Button">
        <item name="android:background">@color/cr_red</item>
        <item name="android:textColor">@color/cr_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Widget.EditText.Custom" parent="android:Widget.EditText">
        <item name="android:background">@color/cr_white</item>
        <item name="android:textColor">@color/cr_black</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Widget.Spinner.Custom" parent="android:Widget.Spinner">
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
        <item name="android:background">@color/cr_red</item>
        <item name="android:textColor">@color/cr_black</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:textColor">@color/cr_white</item>
        <item name="android:background">@color/cr_red</item>
        <item name="android:maxHeight">10dip</item>
    </style>
    <style name="SpinnerDropDownItem">
        <item name="android:textColor">@color/cr_white</item>
        <item name="android:background">@color/cr_red</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Widget.CheckBox.Custom" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@color/cr_white</item>
        <item name="android:background">@color/cr_red</item>
        <item name="android:padding">5dp</item>
    </style>


    <!-- ActionBar styles -->
    <style name="CrossRoadsActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/cr_blue</item>
    </style>





</resources>
