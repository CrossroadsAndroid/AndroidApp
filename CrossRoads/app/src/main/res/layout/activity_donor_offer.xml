<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.crossroads.activities.donors.DonorOfferActivity">

    <RelativeLayout
        android:id="@+id/lAddItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/cr_red"
        android:onClick="addItem"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ivCam"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cam_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivCam"
            android:paddingLeft="10dp"
            android:text="Add Item" />

    </RelativeLayout>

    <ListView
        android:id="@+id/lvItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lAddItem"
        android:choiceMode="singleChoice" />

</RelativeLayout>
