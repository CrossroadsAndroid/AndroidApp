<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.crossroads.fragments.OfferListFragment">

    <ListView
        android:id="@+id/lvOffers"
        android:layout_width="match_parent"
        android:layout_height="444dp"
        android:layout_gravity="left|top" />

    <Button
        android:id="@+id/btnAddOffer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:onClick="addOffer"
        android:text="Add Offer" />


    <RelativeLayout
        android:id="@+id/empty_offers_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/ivNoOffers"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:src="@drawable/sad_bulb" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivNoOffers"
            android:layout_centerHorizontal="true"
            android:paddingTop="20dp"
            android:text="No offers found."
            android:textAppearance="?android:attr/textAppearanceLarge" />


    </RelativeLayout>

</FrameLayout>
